    field(PREC, "2")
    field(EGU, "A")
    field(PINI, "YES")
    field(LOPR, "-0.5")
    field(HOPR, "0.")
    field(LOW, "-0.5")
    field(LSV, "MAJOR")
    field(HIGH, "0.")
    field(HSV, "MAJOR")
}

record(calcout, "acu_mot_I_1_swst")
{
    field(SCAN, "1 second")
    field(INPA, "acu_mot_I_1.VAL")
    field(INPB, "acu_mot_I_1.LOPR")
    field(INPC, "acu_mot_I_1.HOPR")
    field(CALC, "A>=B && A<=C ? 1:0")
}


